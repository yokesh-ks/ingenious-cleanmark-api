{
  "version": "1",
  "type": "collection",
  "uid": "bruno-collection",
  "name": "Ingenious Cleanmark API",
  "description": "API endpoints for URL to Markdown conversion",
  "items": [
    {
      "type": "http-request",
      "uid": "health-check",
      "name": "Health Check",
      "description": "Check if the API is running",
      "request": {
        "method": "GET",
        "url": "http://localhost:8787/health"
      }
    },
    {
      "type": "http-request",
      "uid": "convert-url",
      "name": "Convert URL to Markdown",
      "description": "Convert a URL to Markdown format",
      "request": {
        "method": "POST",
        "url": "http://localhost:8787/convert",
        "headers": [
          {
            "name": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "type": "json",
          "contentType": "application/json",
          "data": {
            "url": "https://example.com",
            "options": {
              "format": "markdown",
              "includeImages": true,
              "includeTables": true
            }
          }
        }
      }
    },
    {
      "type": "http-request",
